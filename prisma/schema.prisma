// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id String @id @default(uuid())
  id_dep String
  id_group String?
  firstname  String
  lastname String 
  phone Int
  email String @unique
  username String @unique
  password String
  office_num Int 
  function String
  role  Role  
}